<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/logo_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    
         <ImageButton 
            android:id="@+id/img_btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/quit"/>
		
        
        
        <TextView
            android:id="@+id/text_profile_tel"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="10dip"
            
            android:gravity="bottom"
            android:text="注册手机号:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_text_profile_tel"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:editable="false"
            android:layout_below="@id/text_profile_tel"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip" />

        <TextView
            android:id="@+id/text_profile_userName"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_below="@id/edit_text_profile_tel"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="10dip"
            android:gravity="bottom"
            android:text="用户名:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_profile_userName"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:editable="false"
            android:layout_below="@id/text_profile_userName"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip"
            android:maxLines="200"
            android:scrollHorizontally="true" />
         
        <TextView
            android:id="@+id/text_profile_amount"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="10dip"
             android:layout_below="@id/editText_profile_userName"
            android:gravity="bottom"
            android:text="余额"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_text_profile_amount"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:editable="false"
            android:layout_below="@id/text_profile_amount"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip" />
        
        <TextView
            android:id="@+id/text_profile_mountClient"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="10dip"
             android:layout_below="@id/edit_text_profile_amount"
            android:gravity="bottom"
            android:text="终端状态"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_text_profile_mountClient"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:editable="false"
            android:layout_below="@id/text_profile_mountClient"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip" />
        
        
       <TextView
            android:id="@+id/profile_scan_result"
            android:layout_width="wrap_content"
            android:layout_height="70dip"
            android:layout_below="@id/edit_text_profile_amount"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="10dip"
            android:gravity="bottom"
            android:textColor="#000000"
            android:visibility="invisible"
            android:text="扫描结果"
            android:textSize="18sp" />
       
       
       <Button
            android:id="@+id/btn_profile_withdraw"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_below="@id/profile_scan_result"
            android:layout_alignParentRight="true"
            
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:text="我要提现"
            android:textColor="#000000"
            android:textSize="18sp"/>
       <Button
            android:id="@+id/btn_profile_scanPhoto"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_below="@id/btn_profile_withdraw"
            android:layout_alignParentRight="true"
            
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:text="扫码绑定"
            android:textColor="#000000"
            android:textSize="18sp"/>

      <Button
            android:id="@+id/btn_profile_unmountClient"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_below="@id/btn_profile_scanPhoto"
            android:layout_alignParentRight="true"
            
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:text="解除邦定"
            android:textColor="#000000"
            android:textSize="18sp"/>
        
    </RelativeLayout>
    
    

</LinearLayout>